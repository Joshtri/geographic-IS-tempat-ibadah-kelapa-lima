<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Map</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <style>
    #map { height: 400px; }
  </style>
</head>
<body>

  <%-include('partials/header')%>

  <div class="container">

  </div>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Mengambil data lokasi dari backend
    fetch('/locations')
      .then(response => response.json())
      .then(locations => {
        const latLngs = locations.map(location => [location.lat, location.lng]);
        const map = L.map('map').fitBounds(latLngs); // Inisialisasi peta dan atur tampilan sesuai dengan data lokasi

        // Menambahkan layer peta dari OpenStreetMap
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        locations.forEach(location => {
          // Menambahkan marka ke peta
          L.marker([location.lat, location.lng]).addTo(map)
            .bindPopup(location.name); // Menambahkan popup dengan nama lokasi
        });
      })
      .catch(error => {
        console.error('Error fetching locations:', error);
      });
  </script>
</body>
</html>
